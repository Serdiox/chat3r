{
  "rewrites": [
    {
      "source": "/proxy/:path*",
      "destination": "/api/proxy?url=:path*"
    }
  ],
  "headers": [
    {
      "source": "/proxy/:path*",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS, POST, PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "*" }
      ]
    }
  ],
  "functions": {
    "api/proxy.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
